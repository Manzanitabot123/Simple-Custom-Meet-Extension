{
  "name": "Simple Custom Meet",
  "version": "1.4.0",
  "description": "Personaliza los colores y el fondo de tu Meet",
  "manifest_version": 2,
  "author": "Manzanitabot123",
  "permissions": ["storage", "activeTab"],
  "content_scripts": [
    {
        "matches": ["https://meet.google.com/*"],
        "js": ["js/content.js"],
        "css": ["css/fondo.css"]
    }
  ],
  "browser_action": {
    "default_title": "Personaliza tu Google Meet :D",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/png/icono16.png",
      "32": "/png/icono64.png",
      "48": "/png/icono48.png",
      "128": "/png/icono128.png"
    }
  },
  "icons": {
    "16": "/png/icono16.png",
    "32": "/png/icono64.png",
    "48": "/png/icono48.png",
    "128": "/png/icono128.png"
  },
  "content_security_policy":"script-src 'self' https://apis.google.com; object-src 'self'"
}
